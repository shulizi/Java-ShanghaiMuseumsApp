<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.lizi.shanghaisandtmuseums.mview.MViewPager
        android:id="@+id/vp_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >
    </com.lizi.shanghaisandtmuseums.mview.MViewPager>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:background="@drawable/radio_btn_style"
            android:checked="true"
            android:button="@null"
            android:layout_weight="1"
            android:drawableTop="@drawable/region"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:onClick="locationRadioClick"
            android:text="@string/location" />

        <RadioButton
            android:id="@+id/radio1"
            android:background="@drawable/radio_btn_style"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/location"
            android:textColor="@color/white"
            android:onClick="mapRadioClick"
            android:text="@string/map" />
    </RadioGroup>

</RelativeLayout>